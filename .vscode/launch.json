{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "iOS Sim",
            "request": "launch",
            "type": "dart",
            "preLaunchTask": "open_ios_sim",
            "program": "lib/main.dart",
            "args": [
                "--debug",
                "-t",
                "lib/shared_prefs/demo.dart",
                "-d",
                "${config:ios.simulator}"
            ]
        },
        {
            "name": "iOS Device",
